<!DOCTYPE html>
<html>
  <head>
    <title>EF/Camp Help - <%= breadcrumb[breadcrumb.length-1].anchor %></title>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no">    
    <link rel="SHORTCUT ICON" href="http://media.ef.com/favicon.ico" />
    <% if (lang == "zh") { %>
    <link rel="stylesheet" type="text/css" href="http://libs.baidu.com/bootstrap/3.0.3/css/bootstrap.css">
    <% } else {%>
    <link rel="stylesheet" type="text/css" href="//maxcdn.bootstrapcdn.com/bootstrap/3.3.1/css/bootstrap.min.css">
    <% } %>
    <link rel="stylesheet" href="/stylesheets/style.css">

  </head>
  <body>
    <div class="panel-container">
      <div class="logo">
        <img src="/images/logo.png">
      </div>
      <div class="panel-box container">
        <div class="row">
          <div class="col-md-12 title-container">
            <span>
              <%= breadcrumb[breadcrumb.length-1].anchor %>
            </span>
          </div>
        </div>
        <div class="row">
          <div class="col-md-12">
            <ol class="breadcrumb">
              <% breadcrumb.forEach(function(bc){ %>
                <li class="<%= bc.isCurrent ? 'active' : ''%>">
                  <% if (bc.isCurrent) { %>
                  <%=  bc.anchor %>
                  <% } else { %>
                  <a href="<%= bc.href %>"><%= bc.anchor %></a>
                  <%}%>
                </li>
              <% }) %>
            </ol>
          </div>
        </div>
        <div class="main">
          <%- body %>  
        </div>
      </div>
      <div class="footer text-center">
      &copy EF Education First
      </div>
    </div>
    <% if (lang == "zh") { %>
    <script src="http://libs.baidu.com/jquery/2.0.3/jquery.js"></script>
    <% } else {%>
    <script src="http://code.jquery.com/jquery-2.0.3.min.js"></script>
    <% } %>
    <script src="/static/lunr.min.js"></script>
    <script>
      var lang = "<%= lang %>";
      var idx;
      $(document).ready(function(){
        idx = lunr(function () {
          this.field('title');
          this.field('body');
          this.ref('path');
        })
        $.getJSON("/"+lang+"/all.json", function(data){
          $.each(data, function(k, v){
            idx.add(v);
          });
          console.log(idx.search('Pronunciation'))
        });
        
      })
    </script>
  </body>
</html>
